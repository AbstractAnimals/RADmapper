


class Wtss_summary :
    
    def __init__(self):
        self.mapFilePath=None
        self.mapFileDate=None
        self.maq_version=None
        self.resource_files=[]
        self.duplicates=None
        self.readLength=None
        self.wtssVersion=None
        self.solexa_configVersion=None
        self.ryanVersion=None
        self.startOn=None
        self.endOn=None
    
    def print_summary(self, fileout=None):
        import sys
        
        if fileout:
            old_stdout=sys.stdout
            sys.stdout=open(fileout, 'w')
            
        if self.mapFilePath: print 'maq file used: %s'%self.mapFilePath
        if self.mapFileDate: print 'maq file created on: %s'%self.mapFileDate
        if self.duplicates: print 'duplicate left in: %s'%self.duplicates
        if self.readLength: print 'readLength used: %s'%self.readLength
        if self.wtssVersion: print 'wtss pipeline version: %s'%self.wtssVersion
        if self.solexa_configVersion: print 'config file version: %s'%self.solexa_configVersion
        if self.ryanVersion: print 'script revision: %s'%self.ryanVersion
        if self.maq_version: print 'maq version used: %s'%self.maq_version
        if len(self.resource_files)>0: print 'Resource files: %s'%('\n                '.join(self.resource_files))
        if self.startOn: print 'started on: %s'%self.startOn
        if self.endOn: print 'ended on: %s'%self.endOn
        
        if fileout:
            sys.stdout=old_stdout
        